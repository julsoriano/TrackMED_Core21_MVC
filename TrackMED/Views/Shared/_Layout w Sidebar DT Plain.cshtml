<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TrackMED</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" />

        <!-- Added: Sidebar Navigation -->
        <link rel="stylesheet" href="~/css/dashboard.css" />

        <!-- Added: DataTables CSS Source - Refer to https://startbootstrap.com/template-overviews/sb-admin-2/  -->
        <!--<link rel="stylesheet" href="~/css/plugins/dataTables.bootstrap.css"> -->
             
        <!-- Added: jQuery Widgets, ie., Dialog Box-->
        <!--<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">-->
    </environment>

    <environment exclude="Development">
        <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />

        <!-- Added: Sidebar Navigation -->
        <link rel="stylesheet" href="~/css/dashboard.css" />
          
        <!-- Added: DataTables CSS Source - Refer to https://startbootstrap.com/template-overviews/sb-admin-2/ -->
        <link rel="stylesheet" href="~/css/plugins/dataTables.bootstrap.css">

        <!-- Added: jQuery Widgets, ie., Dialog Box-->
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    </environment>

</head>
<body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- <a class="navbar-brand" href="#">Project name</a> -->
                <a asp-controller="Home" asp-action="Index" class="navbar-brand">TrackMED</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Home" asp-action="About">About</a></li>
                    <li><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    <!--
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li role="separator" class="divider"></li>
                            <li class="dropdown-header">Nav header</li>
                            <li><a href="#">Separated link</a></li>
                            <li><a href="#">One more separated link</a></li>
                        </ul>
                    </li>
                    -->
                </ul>
                @* @await Html.PartialAsync("_LoginPartial") *@
            </div>
        </div>
    </nav>

    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 sidebar">
                <ul class="nav nav-sidebar navbar-collapse">
                    <li class="dropdown">
                        <!-- <li class="dropdown"> -->
                        <!-- <a href="#">Tables <span class="caret"></span></a> -->
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tables <span class="caret"></span></a>
                        <ul class="dropdown-menu nav nav-second-level">
                            <!-- <ul class="dropdown-menu nav nav-second-level"> Had to eliminate dropdown-menu class because of conflict with datatables.min.js below in the Scripts section -->
                            <li><a asp-controller="ActivityType" asp-action="Index">Activity Types</a></li>
                            <li class="active"><a asp-controller="Component" asp-action="Index">Components<span class="sr-only">(current)</span></a></li>
                            <li><a asp-controller="Description" asp-action="Index">Descriptions</a></li>
                            <li><a asp-controller="Location" asp-action="Index">Locations</a></li>
                            <li><a asp-controller="Model_Manufacturer" asp-action="Index">Models/Manufacturers</a></li>
                            <li><a asp-controller="Owner" asp-action="Index">Owners</a></li>
                            <li><a asp-controller="ProviderOfService" asp-action="Index">ServiceProviders</a></li>
                            <li><a asp-controller="Status" asp-action="Index">Status</a></li>
                            <li><a asp-controller="SystemsDescription" asp-action="Index">SystemsDescription</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a asp-controller="SystemTab" asp-action="Index">Systems</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <!--<div class="container body-content"> -->
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; 2016 - TrackMED</p>
                </footer>
            </div>
        </div>
    </div>

    <environment include="Development">
        <!-- Basic -->
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        <!-- Added: DataTables JavaScript Source - Refer to https://startbootstrap.com/template-overviews/sb-admin-2/ -->
        <script src="~/js/plugins/dataTables/jquery.dataTables.js"></script>
        <script src="~/js/plugins/dataTables/dataTables.bootstrap.js"></script>

        <!-- Added: jQuery Widgets, ie., Dialog Box-->
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

        <!-- Optional JavaScript (For Components: https://getbootstrap.com/docs/4.0/getting-started/introduction/) -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js" integrity="sha384-vFJXuSJphROIrBnz7yo7oB41mKfc8JzQZiCq4NCceLEaO4IHwicKwpJf9c9IpFgh" crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/js/bootstrap.min.js" integrity="sha384-alpBpkh1PFOepccYVYDB4do5UnbKysX5WZXm3XxPqe5iKTfUKjNkCk9SaVuEZflJ" crossorigin="anonymous"></script>
        -->
    </environment>
    <environment exclude="Development">
        <!-- Basic -->
        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
        </script>
        <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

        <!-- Added: DataTables JavaScript Source - Refer to https://startbootstrap.com/template-overviews/sb-admin-2/ -->
        <script src="https://cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"
                asp-fallback-src="~/js/plugins/dataTables/jquery.dataTables.min.js"
                asp-fallback-test="window.jQuery">
        </script>
        <script src="https://cdn.datatables.net/1.10.12/js/dataTables.bootstrap.min.js"
                asp-fallback-src="~/js/plugins/dataTables/dataTables.bootstrap.min.js"
                asp-fallback-test="window.jQuery">
        </script>

        <!-- Added: jQuery Widgets, ie., Dialog Box-->
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    </environment>
    
    @RenderSection("scripts", required: false)
</body>
</html>
