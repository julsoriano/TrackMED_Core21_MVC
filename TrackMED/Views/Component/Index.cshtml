                            <td>@Html.DisplayFor(modelItem => item.MaintenanceDate)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                <a href="#!" rel="@item.Id" onclick="deleteRecord(this, 'Components')">Del</a>
