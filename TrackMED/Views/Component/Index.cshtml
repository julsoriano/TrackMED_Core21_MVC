                            <td>@Html.DisplayFor(modelItem => item.assetnumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.imte)</td>
                            <td>@Html.DisplayFor(modelItem => item.serialnumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description.Desc)</td>
